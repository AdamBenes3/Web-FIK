<!-- views/index.ejs -->
<!DOCTYPE html>
<html>

<head>
    <title>Show Device Information</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        #fixedTable {
